offset-y       = 152

bottom         = false
fixed-center   = true
font-0 = terminus:pixelsize=14
module-margin = 0

modules-center = battery

;wm-name        = i3
enable-ipc     = true

[module/display]
type           = custom/text
content        = pwr
click-left     = lock
click-right    = shutdown now


