[module/i3]
type = internal/i3

format = <label-state> <label-mode>
format-spacing = 0

label-focused = %index%
label-focused-padding = 1
;label-focused-margin = 0
label-focused-font = 3
label-focused-foreground = #e8e8e8
;label-focused-background = #00000000
;label-focused-overline = #00000000
;label-focused-underline = #00000000

label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-margin = 0
;label-unfocused-background = #00000000
label-unfocused-foreground = #8c8c8c
;label-unfocused-overline = #919191
;label-unfocused-underline = #00000000
label-unfocused-font = 3

label-urgent = %index%
label-urgent-padding = 1
label-urgent-margin = 0
label-urgent-font = 3
;label-urgent-background = #00000000
label-urgent-foreground = #F2777A

label-visible = %index%
label-visible-padding = 1
label-visible-margin = 0
label-visible-font = 3


[module/date]
type = internal/date
interval = 5
date = "%Y-%m-%d"
date-alt = ""
time = %H:%M
time-alt = %H:%M
format-prefix-foreground = #e8f2ef
format-underline = #0a6cf5
label = %date% %time%


[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
format-prefix-foreground = #e8f2ef
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem "
format-prefix-foreground = #e8f2ef
format-underline = #4bffdc
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlo1
interval = 3.0
2
format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%

format-disconnected =

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = #e8f2ef

[module/volume]
type = internal/volume

format-volume = <label-volume> 
label-volume = vol %percentage%% 
label-volume-foreground = ${root.foreground}

format-muted-prefix = " "
format-muted-foreground = #e8f2ef
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #e8f2ef
bar-volume-foreground-1 = #e8f2ef
bar-volume-foreground-2 = #e8f2ef
bar-volume-foreground-3 = #e8f2ef
bar-volume-foreground-4 = #e8f2ef
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
format-prefix = "bat "
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = ~ <label-charging>
format-charging-underline = #ffb52a

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = "~"
format-full-prefix-foreground = #e8f2ef
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = #e8f2ef

animation-charging-0 = "~"
animation-charging-1 = "~"
animation-charging-2 = "~"
animation-charging-foreground = #e8f2ef
animation-charging-framerate = 750

[settings]
screenchange-reload = true

